# Application Configuration
APP_NAME=Weather API Service
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# API Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# External Weather API Configuration
WEATHER_API_KEY=your_actual_openweathermap_api_key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5/weather
WEATHER_API_TIMEOUT=30

# Cache Configuration
CACHE_TTL_MINUTES=5

# Provider Configuration
# Options: aws, local
PROVIDER_MODE=local

# AWS Configuration (only needed when PROVIDER_MODE=aws)
AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_key_here
# AWS_SESSION_TOKEN=your_session_token_here

# S3 Configuration
S3_BUCKET_NAME=weather-api-bucket
S3_PREFIX=weather-data/

# DynamoDB Configuration
DYNAMODB_TABLE_NAME=weather-events

# Local Storage Configuration (used when PROVIDER_MODE=local)
LOCAL_STORAGE_PATH=./data/weather_files
LOCAL_DB_PATH=./data/weather_events.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=console
# LOG_FILE=./logs/weather-api.log

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_CITY=London