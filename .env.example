# Environment Configuration
ENVIRONMENT=development
DEBUG=true

# Weather API Configuration
WEATHER_API_KEY=your_openweathermap_api_key_here
WEATHER_API_BASE_URL=https://api.openweathermap.org/data/2.5

# Cache Configuration
CACHE_TTL_MINUTES=5

# Storage Provider (aws_s3 or local_file)
STORAGE_PROVIDER=local_file

# Database Provider (dynamodb or local_db)
DATABASE_PROVIDER=local_db

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
S3_BUCKET_NAME=weather-data-bucket
DYNAMODB_TABLE_NAME=weather-events

# Local Storage Configuration
LOCAL_STORAGE_PATH=./data/weather_files
LOCAL_DB_PATH=./data/weather.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json